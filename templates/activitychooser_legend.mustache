{{!
    @template theme_bengal/activitychooser_legend

    Legend for displaying custom activity icon colors in the activity chooser.

}}

<div class="activity-chooser-legend" aria-hidden="true">
    <div class="legend-item">
        <div class="legend-icon assessed"></div>
        <span class="legend-equals">=</span>
        <span class="legend-description">{{#str}}activitychooserlegend_assessed, theme_bengal{{/str}}</span>
    </div>
    <div class="legend-item">
        <div class="legend-icon not-assessed"></div>
        <span class="legend-equals">=</span>
        <span class="legend-description">{{#str}}activitychooserlegend_notassessed, theme_bengal{{/str}}</span>
    </div>
    <div class="legend-item">
        <div class="legend-icon external-tool"></div>
        <span class="legend-equals">=</span>
        <span class="legend-description">{{#str}}activitychooserlegend_externaltool, theme_bengal{{/str}}</span>
    </div>
    <div class="legend-item last-legend-item">
        <div class="legend-icon resource"></div>
        <span class="legend-equals">=</span>
        <span class="legend-description">{{#str}}activitychooserlegend_resource, theme_bengal{{/str}}</span>
    </div>
</div>
